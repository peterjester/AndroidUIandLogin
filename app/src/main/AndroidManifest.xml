<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.peterjester.androiduiandlogin_peterjester">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.activity.MainActivity"
            android:label="Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.activity.LoginSuccessActivity"
            android:label="Login Successful"></activity>
        <activity
            android:name=".activity.activity.SignUpActivity"
            android:label="Sign Up"></activity>
        <activity android:name=".activity.activity.ViewAllUsersActivity"></activity>
    </application>

</manifest>